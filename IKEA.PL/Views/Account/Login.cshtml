@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="LogIn" method="post">
			<input class="text email" style="margin-bottom:10px;" asp-for="Email" placeholder="Email" required="">
			<input class="text email" style="margin-bottom:10px;" type="password" asp-for="Password" placeholder="Password" required="">

			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" class="checkbox" asp-for="RememberMe" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Log In">
		</form>
		<p>Don't have an Account? <a href="/Account/SignUp"> Register Now!</a></p>
		<p> <a asp-action="ForgetPassword"> Forget Password?</a></p>

	</div>
</div>

