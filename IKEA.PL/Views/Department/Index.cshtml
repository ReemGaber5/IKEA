@using IKEA.BLL.DTOs.Departments;
@model IEnumerable<DepartmentDTO>
@{
    ViewData["Title"] = "Departmnts";
}

<h1>Departments</h1>

<br />
<br />

<a asp-controller="Department" asp-action="Create" class="btn btn-primary"> Create New Department</a>

@if(Model.Count()>0)
{
    <table class="table table-striped table-hover mt-4">
        <thead class=" text-center">
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.C0reationDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>

        <tbody class="text-center">
            @foreach(var dept in Model)
            {
                <tr>
                    <td>@dept.Code</td>
                    <td>@dept.Name</td>
                    <td>@dept.C0reationDate</td>
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@dept.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Details</a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Update" asp-route-id="@dept.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>

            }

        </tbody>

    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h3>There is No Department</h3>
    </div>

    
}
