@using IKEA.BLL.DTOs.Departments;
@model DepartmentDetailsDTO;
@{
    ViewData["Title"] = "Delete";
}

<h1>Are U Sure To Delete @Model.Name Department?</h1>

<partial name="Partials/_DeletedDetailsPartial" model="@Model">

    <form asp-action="Delete" method="post" asp-route-DeptId="@Model.Id">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mt-4">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back To list</a>
        </div>
    </form>
